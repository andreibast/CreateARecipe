{% extends ('base.html.twig') %}


{% block body %}
    <style>

        .wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 14px/1.5
            sans-serif;

        }
        .wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .box{
            background-color: #edebf4;
        }



    </style>
    <h1 class="display-4  text-center"> {{recipepost.title }} </h1>
<div class="wrapper">


    <div class="row">

        <div class="col-md-3">

            <div class="text-center col-md-12 mb-3 box rounded-lg">
                <label class="font-weight-bold">Recipe Ingredients:</label>
                <div>{{recipepost.ingredients }}</div>
            </div>

            <div class="col-md-12 mb-3 text-center border box rounded-lg">
                <label class="font-weight-bold">Preparation Time:</label>
                <div>{{recipepost.preparationtime }}</div>
            </div>

            <div class="col-md-12 mb-3 text-center border box rounded-lg">
                <label class="font-weight-bold">Recipe Price:</label>
                <div>{{recipepost.recipeprice }} </div>
            </div>


            <div class="col-md-12 text-center border  box rounded-lg">
                <label class="font-weight-bold">Servings Estimation:</label>
                <div>{{recipepost.servings }}</div>
            </div>
        </div>


        <div class="col-md-7">
            <div class="text-center border p-3 font-weight-bold border box rounded-lg mb-3">
                <hr>
                Recipe Guidelines
                <hr>
            </div>
            <div class="border p-3 border box rounded-lg">
                {{recipepost.guidelines }}
            </div>
        </div>

    </div>
</div>

{% endblock %}


